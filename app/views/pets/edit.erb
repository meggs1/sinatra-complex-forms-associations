<h1>Update Pet</h1>

<form action="/pets" method="POST">
<label for="pet_name">Pet Name:</label>
<input type="text" name="pet[name]" id="pet_name">

<h2>Exiting Owners</h2>
<%@owners.each do |owner| %>
    <input type="radio" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if @pet.owner == owner%>><%=owner.name%></input> <br>
<%end%>

<h2>Create New Owner:</h2>
<label for="name">Name:</label>
<input type="text" name="owner[name]" id="owner_name">
<br>
<br>

<input type="submit" value="Update Pet">
</form>

